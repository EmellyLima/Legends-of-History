"version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Jogo (Allegro)",
            "type": "shell",
            "command": "clang",
            "args": [
                "-Wall",
                "-g",
                "-x", "c",
                "-Iinclude",
                "-I/opt/homebrew/opt/allegro/include",

                "-L/opt/homebrew/opt/allegro/lib",

                "-o",
                "build/meu_jogo",

                "src/*.c",

                "-lallegro",
                "-lallegro_main", // <<< ADICIONE ESTA LINHA AQUI
                "-lallegro_primitives",
                "-lallegro_image",
                "-lallegro_font",
                "-lallegro_ttf",
                "-lallegro_audio",
                "-lallegro_acodec",

                "-framework", "Foundation",
                "-framework", "Cocoa",
                "-framework", "OpenGL"
            ],
            // ... resto do arquivo
        }
    ]
}